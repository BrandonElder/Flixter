<div class="booyah-box courses-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Current Courses for 2017</h1>
  <hr class="courses-hr">
  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course) %></h2>
    <%= image_tag course.image, class: 'img-responsive' %>
    <br />
    <div class="col-sm-8 col-sm-offset-2 col-xs-12 text-center course-content">
      <div class="col-sm-8 col-sm-offset-1 col-xs-12 text-center">
        <b><%= course.description %></b>
      </div>
      <div class="col-sm-2 col-xs-12 text-center">
        <%= link_to 'More Details...', course_path(course),class: 'btn btn-primary btn-large' %>
      <br />
      </div>
    </div>
    <br class="clr" />
    <br />
    <br />
    <hr />
    <br />
  <% end %>
</div>